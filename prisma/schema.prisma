generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  posts Post[]
  //coloque algo para colocar no m√≠nimo 8
  senha String  @db.Varchar(20)
}

model Post {
  id       Int     @id @default(autoincrement())
  title    String
  content  String
  author   User    @relation(fields: [authorId], references: [id])
  authorId Int
}

model Loja {
  id        Int    @id @default(autoincrement())
  nome      String @db.Varchar(20)
  produtos Produto[]


}

model Produto {
  id          Int   @id @default(autoincrement())
  nome        String
}